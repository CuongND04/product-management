extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-btn-user.pug

    .row
      .col-12
        +box-head("Danh sách bạn bè")

    .row(data-users-friend=user.id)
      each user in users
        .col-6(user-id=user.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src="https://robohash.org/hicveldicta.png"
                alt=user.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                a(
                  class = "btn btn-sm btn-primary mr-1"
                  href=`/chat/${user.room_chat_id}`
                ) Nhắn tin
              div(
                class="inner-status"
                status=user.statusOnline
              ) <i class="fa-solid fa-circle"></i>
  block script
    script( type="module" src="/js/users.js")